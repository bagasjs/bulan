function main() 
    : ptr, dptr
{
    extern printf;
    extern malloc;
    // 8 is a single word
    ptr = malloc(8 * 2);
    dptr = 0 * 8 + ptr;
    *dptr = 1;
    dptr = 1 * 8 + ptr;
    *dptr = 2;

    dptr = 0 * 8 + ptr;
    printf("ptr[0] = %d\n", *dptr);

    dptr = 1 * 8 + ptr;
    printf("ptr[1] = %d\n", *dptr);
}
